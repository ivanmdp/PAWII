<!DOCTYPE html>

<html>
<head>
  <title>Minimarket Array</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Minimarket</h1>
    <table class="table table-bordered">
  <thead>
    <tr>
      <th>Nama Barang</th>
      <th>Jumlah</th>
      <th>Harga</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% let total = 0; %>
    <% products.forEach(p => { 
        let subtotal = p.qty * p.price;
        total += subtotal;
    %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.qty %></td>
        <td><%= p.price.toLocaleString() %></td>
        <td><%= subtotal.toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
  <tfoot>
    <tr>
        <th colspan="3" class="text.end>Total"></th>
        <th>Rp<%= total.toLocaleString()%></total></th>
    </tr>
  </tfoot>
</table>

  </div>
</body>
</html>
